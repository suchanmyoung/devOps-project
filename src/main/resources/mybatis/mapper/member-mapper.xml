<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.x1.chan.mapper.MemberMapper">
    <resultMap id="memberResultMap" type="member">
        <result column="account_id" property="accountId"/>
        <result column="login_id" property="loginId"/>
        <result column="password" property="password"/>
        <result column="user_Type" property="userType"/>
        <result column="user_Email" property="userEmail"/>
        <result column="name" property="name"/>
        <result column="nickname" property="nickName"/>
        <result column="regDate" property="regDate"/>
        <result column="phone_number" property="phoneNumber" />
        <result column="use_YN" property="useYN"/>
    </resultMap>
    
    <insert id="joinMember" parameterType="member">
        INSERT INTO MEMBER(ACCOUNT_ID, LOGIN_ID, PASSWORD, PASSWORD_CORR, USER_EMAIL, NAME, NICKNAME, PHONE_NUMBER)
        VALUES(SEQ_ACCOUNTID.NEXTVAL,
                                  #{loginId},
                                  #{password},
                                  #{passwordCorr},
                                  #{userEmail},
                                  #{name},
                                  #{nickName},
                                  #{phoneNumber}
        )
    </insert>
    
    <select id="findMemberById" parameterType="String" resultMap="memberResultMap">
        SELECT ACCOUNT_ID, LOGIN_ID, PASSWORD, PASSWORD_CORR, USER_TYPE, USER_EMAIL, NAME, NICKNAME, REGDATE, PHONE_NUMBER, USE_YN
        FROM MEMBER
        WHERE LOGIN_ID = #{loginId}
    </select>
</mapper>